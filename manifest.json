{
  "name": "Evolve Auto Clicker",
  "description": "Automatically clicks the food, lumber, and stone gather buttons in the Evolve Idle game.",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "evolve-icon-16.png",
      "24": "evolve-icon-24.png",
      "32": "evolve-icon-32.png"
    }
  }
}